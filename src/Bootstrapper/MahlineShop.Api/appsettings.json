{
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "CatalogConnection": "Server=(localdb)\\MSSQLLocalDB;Database=MahlineShopCatalog;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "IdentityConnection": "Server=(localdb)\\MSSQLLocalDB;Database=MahlineShopIdentity;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "OrderingConnection": "Server=(localdb)\\MSSQLLocalDB;Database=MahlineShopOrdering;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "RedisCache": "localhost:6379,password="
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      // 1. Global Default: Warning (Ignore Info/Debug logs from everywhere)
      "Default": "Warning",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        // 2. Allow OUR code to log Information
        "MahlineShop": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=(localdb)\\MSSQLLocalDB;Database=MahlineShopLogs;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true", // Your Log Database Connection
          "sinkOptions": {
            "tableName": "TrafficLogs", // Let's rename this to be specific
            "autoCreateSqlTable": true
          }
        }
      }
    ]
  },
  "JwtSettings": {
    // The secret key used to sign the token. Must be long and stored securely!
    "Secret": "ThisIsAVeryLongAndSecureKeyForMahlineShopModularMonolith2025Secret",
    "Issuer": "MahlineShop.Identity.Service",
    "Audience": "MahlineShop.Client",
    "ExpiryMinutes": 60 // Token valid for 60 minutes
  }
}
